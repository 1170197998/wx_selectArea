.shade {
  background-color: #ccc;
  opacity: .6;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.handle-bar {
  padding: 15px 15px;
  background-color: #eee;
}
.confirm {
  text-align: right
}
.selector-area {
  height: 300px;
  width: 100%;
  background-color: #e6ebf3;
  position: absolute;
  bottom: 0;
}
.selector {
  text-align: center
}
.picker {
  font-size: 32rpx;
  padding: 10rpx 0;
}
.actived {
  color: blue
